<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8D8D8D">

    <TextView
        android:id="@+id/main_textview"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <Button
        android:id="@+id/sin_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="sin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_textview"
        app:layout_constraintEnd_toStartOf="@+id/ln_button"
        />
    <Button
        android:id="@+id/ln_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="ln"
        app:layout_constraintTop_toBottomOf="@id/main_textview"
        app:layout_constraintStart_toEndOf="@+id/sin_button"
        app:layout_constraintEnd_toStartOf="@+id/clear_button"
        />
    <Button
        android:id="@+id/clear_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="AC"
        app:layout_constraintTop_toBottomOf="@id/main_textview"
        app:layout_constraintEnd_toStartOf="@+id/back_button"
        app:layout_constraintStart_toEndOf="@+id/ln_button"
        />

    <Button
        android:id="@+id/back_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowSpan="1"
        android:onClick="onClick"
        android:text="&#9003;"
        app:layout_constraintStart_toEndOf="@+id/clear_button"
        app:layout_constraintEnd_toStartOf="@+id/remainder_button"
        app:layout_constraintTop_toBottomOf="@+id/main_textview"
        />
    <Button
        android:id="@+id/remainder_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="%"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintEnd_toStartOf="@+id/divide_button"
        app:layout_constraintTop_toBottomOf="@+id/main_textview"
        />
    <Button
        android:id="@+id/divide_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_rowSpan="1"
        android:onClick="onClick"
        android:text="&#247;"
        app:layout_constraintStart_toEndOf="@+id/remainder_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_textview"
        />
    <Button
        android:id="@+id/cos_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="cos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sin_button"
        app:layout_constraintEnd_toStartOf="@+id/log_button"
        />
    <Button
        android:id="@+id/log_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="log"
        app:layout_constraintStart_toEndOf="@+id/cos_button"
        app:layout_constraintTop_toBottomOf="@+id/ln_button"
        app:layout_constraintEnd_toStartOf="@+id/seven_button"
        />
    <Button
        android:id="@+id/seven_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="7"
        app:layout_constraintStart_toEndOf="@+id/log_button"
        app:layout_constraintEnd_toStartOf="@+id/eight_button"
        app:layout_constraintTop_toBottomOf="@+id/clear_button"
        />
     <Button
         android:id="@+id/eight_button"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:onClick="onClick"
         android:text="8"
         app:layout_constraintStart_toEndOf="@id/seven_button"
         app:layout_constraintTop_toBottomOf="@+id/back_button"
         app:layout_constraintEnd_toStartOf="@+id/nine_button"
         />

    <Button
        android:id="@+id/nine_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/eight_button"
        app:layout_constraintEnd_toStartOf="@+id/multiply_button"
        app:layout_constraintTop_toBottomOf="@+id/remainder_button"
        />
    <Button
        android:id="@+id/multiply_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="x"
        app:layout_constraintStart_toEndOf="@id/nine_button"
        app:layout_constraintTop_toBottomOf="@+id/divide_button"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/tan_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="tan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cos_button"
        app:layout_constraintEnd_toStartOf="@+id/sq_button"
        />
    <Button
        android:id="@+id/sq_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="&#8730;"
        app:layout_constraintStart_toEndOf="@+id/tan_button"
        app:layout_constraintTop_toBottomOf="@+id/log_button"
        app:layout_constraintEnd_toStartOf="@+id/four_button"
        />
    <Button
        android:id="@+id/four_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="4"
        app:layout_constraintStart_toEndOf="@+id/sq_button"
        app:layout_constraintTop_toBottomOf="@+id/seven_button"
        app:layout_constraintEnd_toStartOf="@+id/five_button"
        />

    <Button
        android:id="@+id/five_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/four_button"
        app:layout_constraintTop_toBottomOf="@+id/eight_button"
        app:layout_constraintEnd_toStartOf="@+id/six_button"
        />
    <Button
        android:id="@+id/six_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/five_button"
        app:layout_constraintEnd_toStartOf="@+id/substract_button"
        app:layout_constraintTop_toBottomOf="@+id/nine_button"
        />
    <Button
        android:id="@+id/substract_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="&#8722;"
        app:layout_constraintStart_toEndOf="@+id/six_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiply_button"
        />
    <Button
        android:id="@+id/pi_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="&#120587;"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tan_button"
        app:layout_constraintEnd_toStartOf="@+id/exp_button"
        />
    <Button
        android:id="@+id/exp_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="x&#8319;"
        app:layout_constraintStart_toEndOf="@+id/pi_button"
        app:layout_constraintTop_toBottomOf="@+id/sq_button"
        app:layout_constraintEnd_toStartOf="@+id/one_button"
        />
    <Button
        android:id="@+id/one_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/exp_button"
        app:layout_constraintTop_toBottomOf="@+id/four_button"
        app:layout_constraintEnd_toStartOf="@+id/two_button"
        />
    <Button
        android:id="@+id/two_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/one_button"
        app:layout_constraintTop_toBottomOf="@+id/five_button"
        app:layout_constraintEnd_toStartOf="@+id/three_button"
        />
    <Button
        android:id="@+id/three_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/two_button"
        app:layout_constraintTop_toBottomOf="@+id/six_button"
        app:layout_constraintEnd_toStartOf="@+id/add_button"
        />
    <Button
        android:id="@+id/add_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/three_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/substract_button"
        />
    <Button
        android:id="@+id/cosec_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="sin&#8315;&#185;"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pi_button"
        app:layout_constraintEnd_toStartOf="@+id/sec_button"
        />
    <Button
        android:id="@+id/sec_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="cos&#8315;&#185;"
        app:layout_constraintStart_toEndOf="@+id/cosec_button"
        app:layout_constraintTop_toBottomOf="@+id/exp_button"
        app:layout_constraintEnd_toStartOf="@+id/cot_button"
        />
    <Button
        android:id="@+id/cot_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="tan&#8315;&#185;"
        app:layout_constraintStart_toEndOf="@+id/sec_button"
        app:layout_constraintTop_toBottomOf="@+id/one_button"
        app:layout_constraintEnd_toStartOf="@+id/zero_button"
        />


    <Button
        android:id="@+id/zero_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="0"
        app:layout_constraintStart_toEndOf="@id/cot_button"
        app:layout_constraintTop_toBottomOf="@+id/one_button"
        app:layout_constraintEnd_toStartOf="@+id/period_button"
        />
    <Button
        android:id="@+id/period_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="."
        app:layout_constraintStart_toEndOf="@+id/zero_button"
        app:layout_constraintEnd_toStartOf="@+id/equals_button"
        app:layout_constraintTop_toBottomOf="@+id/three_button"
        />
    <Button
        android:id="@+id/equals_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="="
        app:layout_constraintTop_toBottomOf="@+id/add_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/period_button"
        />


</androidx.constraintlayout.widget.ConstraintLayout>